#include <behaviors.dtsi>
#include <dt-bindings/zmk/bt.h>
#include <dt-bindings/zmk/keys.h>
#include <dt-bindings/zmk/mouse.h>

/ {
    combos {
        compatible = "zmk,combos";

        minus {
            bindings = <&kp MINUS>;
            key-positions = <9 10>;
        };

        under {
            bindings = <&kp UNDER>;
            key-positions = <21 22>;
        };

        langKREN {
            bindings = <&kp RIGHT_ALT>;
            key-positions = <32 33>;
        };

        langJP {
            bindings = <&kp LG(SPACE)>;
            key-positions = <33 34>;
        };

        bkslash {
            bindings = <&kp BACKSLASH>;
            key-positions = <9 22>;
        };

        equal {
            bindings = <&kp EQUAL>;
            key-positions = <10 22>;
        };

        layer3 {
            bindings = <&to 3>;
            key-positions = <6 18>;
        };
    };

    macros {
        GH: GH {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&sk G &kp H>;
            label = "GH";
        };

        GN: GN {
            compatible = "zmk,behavior-macro";
            #binding-cells = <0>;
            bindings = <&sk G &kp N>;
            label = "GN";
        };
    };

    keymap {
        compatible = "zmk,keymap";

        default_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  Q  |  W  |  E  |  R  |  T  |   |  Y  |  U   |  I  |  O  |  P  | BKSP |
            // | CTRL |  A  |  S  |  D  |  F  |  G  |   |  H  |  J   |  K  |  L  |  ;  |  '   |
            // | SHFT |  Z  |  X  |  C  |  V  |  B  |   |  N  |  M   |  ,  |  .  |  /  | ESC  |
            //                    | GUI | LWR | SPC |   | ENT | RSE  | ALT |

            display-name = "Base";
            bindings = <
&kp TAB            &kp Q  &kp W  &kp E         &kp R                 &kp T          &kp Y      &kp U            &kp I      &kp O    &kp P     &kp BACKSPACE
&mt LEFT_ALT CAPS  &kp A  &kp S  &kp D         &lt 3 F               &kp G          &lt 3 H    &lt 2 J          &kp K      &kp L    &kp SEMI  &mt RIGHT_ALT APOS
&kp LCTRL          &kp Z  &kp X  &kp C         &lt 2 V               &kp B          &kp N      &lt 3 M          &kp COMMA  &kp DOT  &kp FSLH  &mt RCTRL ENTER
                                 &kp LEFT_WIN  &mt LEFT_SHIFT SPACE  &lt 1 ENTER    &mkp LCLK  &kp RIGHT_SHIFT  &kp GLOBE
            >;
        };

        lower_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  1  |  2  |  3  |  4  |  5  |   |  6  |  7  |  8  |  9  |  0  | BKSP |
            // | BTCLR| BT1 | BT2 | BT3 | BT4 | BT5 |   | LFT | DWN |  UP | RGT |     |      |
            // | SHFT |     |     |     |     |     |   |     |     |     |     |     |      |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Lower";
            bindings = <
&kp ESC    &kp HOME   &kp UP_ARROW    &kp END    &kp PLUS              &kp MINUS        &kp BACKSPACE  &kp N7        &kp N8        &kp N9        &kp N0  &kp DEL
&trans     &kp LEFT   &kp DOWN_ARROW  &kp RIGHT  &kp KP_ASTERISK       &kp KP_DIVIDE    &kp TILDE      &kp NUMBER_4  &kp NUMBER_5  &kp NUMBER_6  &trans  &trans
&kp LSHFT  &kp LC(Z)  &kp LC(X)       &kp LC(C)  &kp LC(V)             &kp EQUAL        &kp GRAVE      &kp NUMBER_1  &kp NUMBER_2  &kp NUMBER_3  &trans  &kp ENTER
                                      &kp LGUI   &mt LEFT_SHIFT SPACE  &kp ENTER        &mkp LCLK      &mkp RCLK     &kp GLOBE
            >;
        };

        raise_layer {
            // -----------------------------------------------------------------------------------------
            // |  TAB |  !  |  @  |  #  |  $  |  %  |   |  ^  |  &  |  *  |  (  |  )  | BKSP |
            // | CTRL |     |     |     |     |     |   |  -  |  =  |  [  |  ]  |  \  |  `   |
            // | SHFT |     |     |     |     |     |   |  _  |  +  |  {  |  }  | "|" |  ~   |
            //                    | GUI |     | SPC |   | ENT |     | ALT |

            display-name = "Raise";
            bindings = <
&kp LG(TAB)  &kp HOME      &kp UP_ARROW  &kp END       &kp LC(TAB)      &kp LA(TAB)    &kp BACKSPACE  &kp AMPS       &kp KP_MULTIPLY  &kp LPAR   &kp LEFT_BRACE  &kp RIGHT_BRACE
&trans       &kp LEFT      &kp DOWN      &kp RIGHT     &kp LC(LS(TAB))  &trans         &kp MINUS      &kp DLLR       &kp PRCNT        &kp CARET  &kp LBKT        &kp RIGHT_BRACKET
&kp LSHFT    &bt BT_SEL 0  &bt BT_SEL 1  &bt BT_SEL 2  &trans           &trans         &kp TILDE      &kp EXCL       &kp AT           &kp HASH   &kp LPAR        &kp RIGHT_PARENTHESIS
                                         &trans        &mkp LCLK        &mkp RCLK      &kp RET        &kp RIGHT_ALT  &kp LA(GRAVE)
            >;
        };

        layer_3 {
            bindings = <
&kp C_SLEEP  &kp HOME        &kp UP    &kp END     &kp K      &kp PG_UP    &to 0                 &kp F7            &kp F8      &kp F9  &kp F10  &bt BT_SEL 2
&trans       &kp LEFT_ARROW  &kp DOWN  &kp RIGHT   &kp J      &kp PG_DN    &bt BT_CLR            &kp F4            &kp F5      &kp F6  &kp F11  &bt BT_SEL 1
&trans       &kp R           &kp T     &kp L       &GN        &GH          &kp LS(LC(NUMBER_3))  &kp F1            &kp F2      &kp F3  &kp F12  &bt BT_SEL 0
                                       &kp PERIOD  &mkp LCLK  &kp ENTER    &kp C_PREVIOUS        &kp C_PLAY_PAUSE  &kp C_NEXT
            >;
        };
    };
};
